page {
  background-color: #F8F8F8;
  height: 100%;
  font-size: 32rpx;
  line-height: 1.6;
}
.page-section{
  width: 100%;
  /* margin-bottom: 60rpx; */
}
.page-section-spacing{
  box-sizing: border-box;
  /* padding: 0 80rpx; */
}
.page-section-gap .page-section-title{
  padding-left: 0;
  padding-right: 0;
}
.page-section-title{
  padding: 0;
}
swiper{
  width: 100%;
  height: 200px;
}
