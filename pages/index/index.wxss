.page-section-title{
  /* margin-top: 60rpx; */
  position: relative;
}
.info{
  position: absolute;
  right: 0;
  color: #353535;
  font-size: 30rpx;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}
.inline-style {
  display: flex;
  line-height: 32px;
  height: 32px;
  padding: 0 5px;
  background-color: bisque;
  justify-content: space-between;
  font-size: 14px;
  align-items: center;
  margin: 10px 0;
}
