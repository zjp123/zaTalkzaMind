}
/* 风土人情 */
.local-customs{
  text-align: center;
  height: 32px;
  line-height: 32px;
  font-size: 16px;
  background: -webkit-linear-gradient(left,pink,lightblue,skyblue);
  /* background-color: rgb(50, 148, 41); */
}
.card{
  padding: 0 10px;
  margin-top: 10px;
}
/* banya */
.card-title {
  height: 32px;
  line-height: 32px;
  border: 1px solid #f0f0f0;
  border-radius: 6px;
  padding-left: 10px;
  padding-right: 10px;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  background-color: #fff;
}
.card-title image {
  width: 17px;
  height: 17px;
}
.banya-content{
  background-color: #fff;
  width: 90%;
  margin:0 auto;
  text-indent: 28px;
  text-align: justify;
  padding: 5px;
}
/* 天气 */
.weather{
  height: 30px;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  background-color: #fff;
  border: 1px solid #f0f0f0;
  border-radius: 20px;
  width: 100%;

}
.weather-card{
  /* width: 80%; */
  background-color: #fff;
  border-radius: 8px;
  border: 1px solid #f7f7f7;
  display: flex;
  flex-direction: column;
  margin-top: 10px;
  padding: 10px;
}
.weather-card text{
  line-height: 20px;
}